<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/write_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:id="@+id/write_text_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic_bold"
                android:textSize="17sp"
                android:textColor="@color/colorWhite" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/write_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:background="@drawable/bg_round_corner"
            android:inputType="text"
            android:textSize="17sp"
            android:textColor="#222222"
            android:maxLines="1"
            android:fontFamily="@font/nanum_gothic"
            android:hint="@string/write_title_hint"
            android:importantForAutofill="no" >
            <requestFocus />
        </EditText>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/write_recycler_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/write_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/bg_round_corner"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:textSize="17sp"
            android:textColor="#222222"
            android:fontFamily="@font/nanum_gothic"
            android:hint="@string/write_text_hint"
            android:importantForAutofill="no" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/write_navigation_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        app:menu="@menu/nav_write" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>
